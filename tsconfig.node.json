{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/main/**/*.sql",
        "src/preload/**/*",
        "src/common/**/*",
        "src/renderer/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "types": [
            "electron-vite/node"
        ],
        "paths": {
            "@main/*": [
                "./src/main/*"
            ],
            "@common/*": [
                "./src/common/*"
            ],
            "@preload/*": [
                "./src/preload/*"
            ],
            "@renderer/*": [
                "./src/renderer/*"
            ]
        }
    }
}
