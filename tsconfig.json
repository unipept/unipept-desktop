{
    "files": [],
    "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }],
    // This is not strictly necessary, but fixes the import issues with Intellij
    "include": [
        "src/renderer/env.d.ts",
        "src/renderer/**/*",
        "src/renderer/**/*.vue",
        "src/main/**/*",
        "src/main/**/*.sql",
        "src/common/**/*",
        "src/preload/**/*",
        "src/preload/*.d.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "./src/main/*"
            ],
            "@renderer/*": [
                "./src/renderer/*"
            ],
            "@common/*": [
                "./src/common/*"
            ]
        }
    }
}
